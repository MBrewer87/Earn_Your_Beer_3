<!-- Validation failure messages -->

<% if @static_exercise.errors.any? %>
  <% @static_exercise.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->
<% if current_user.username == "MBrewer87" %>
    <div class="row">
      <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Edit Static Exercise #<%= @static_exercise.id %></h3>
          </div>
          <div class="panel-body">
            <form action="/update_static_exercise/<%= @static_exercise.id %>" class="form-horizontal">
              <!-- Label and input for exercise_category -->
              <div class="form-group">
                <label for="exercise_category" class="col-sm-2 control-label">
                  Exercise Category
                </label>
                <div class="col-sm-10">
                  <input type="text" id="exercise_cat_name" name="exercise_cat_name" placeholder="Exercise Name" class="form-control" value="<%= @static_exercise.exercise_cat_name %>">
                </div>
              </div>

              <!-- Label and input for calpermin_low -->
              <div class="form-group">
                <label for="calpermin_low" class="col-sm-2 control-label">
                  Cal. Per Min @ 170 lbs - Low Intensity
                </label>
                <div class="col-sm-10">
                  <input type="text" id="calpermin_low" name="calpermin_low" placeholder="Calories Per Min" class="form-control" value="<%= @static_exercise.calpermin_low %>">
                </div>
              </div>

              <!-- Label and input for calpermin_med -->
              <div class="form-group">
                <label for="calpermin_med" class="col-sm-2 control-label">
                  Cal. Per Min @ 170 lbs - Med. Intensity
                </label>
                <div class="col-sm-10">
                  <input type="text" id="calpermin_med" name="calpermin_med" placeholder="Calories Per Min" class="form-control" value="<%= @static_exercise.calpermin_med %>">
                </div>
              </div>

              <!-- Label and input for calpermin_high -->
              <div class="form-group">
                <label for="calpermin_high" class="col-sm-2 control-label">
                  Cal. Per Min @ 170 lbs   - High Intensity
                </label>
                <div class="col-sm-10">
                  <input type="text" id="calpermin_high" name="calpermin_high" placeholder="Calories Per Min" class="form-control" value="<%= @static_exercise.calpermin_high %>">
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <input type="submit" value="Update Static Exercise" class="btn btn-warning">
                  or
                  <a href="/static_exercises/<%= @static_exercise.id %>">Cancel</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
<% else %>
  <div class="row">
    <h2> Sorry, you are not a moderator so cannot view this page! </h2>
  </div>
<% end %>

<!-- End responsive panel example -->
