<div class="page-header">
  <h1>
    Users
  </h1>
</div>

<!-- Simple table layout example -->

  <div class="row">
    <% if current_user.username == "MBrewer87" %>
      <div class="col-md-12">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Encrypted Password</th>
              <th>Current Weight</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.encrypted_password %></td>
                <td><%= user.weight %></td>
                <td>
                  <a href="/users/<%= user.id %>" class="btn btn-primary">
                    <i class="fa fa-search-plus"></i>
                  </a>
                </td>
                <td>
                  <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
                    <i class="fa fa-edit"></i>
                  </a>
                </td>
                <td>
                  <a href="/delete_user/<%= user.id %>" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i>
                  </a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
    Sorry, you are not logged in as the right user to see the Users information!
    <% end %>
  </div>

<!-- End simple table layout example -->


