<!-- Validation failure messages -->

<% if @exercise.errors.any? %>
  <% @exercise.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Exercise #<%= @exercise.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_exercise/<%= @exercise.id %>" class="form-horizontal">
      <!-- Label and input for exercise_category -->
      <div class="form-group">
        <label for="exercise_category" class="col-sm-2 control-label">
          Exercise category
        </label>
        <div class="col-sm-10">
          <input type="text" id="exercise_category" name="exercise_category" placeholder="Exercise category" class="form-control" value="<%= @exercise.exercise_category %>">
        </div>
      </div>

      <!-- Label and input for duration -->
      <div class="form-group">
        <label for="duration" class="col-sm-2 control-label">
          Duration
        </label>
        <div class="col-sm-10">
          <input type="text" id="duration" name="duration" placeholder="Duration" class="form-control" value="<%= @exercise.duration %>">
        </div>
      </div>

      <!-- Label and input for intensity -->
      <div class="form-group">
        <label for="intensity" class="col-sm-2 control-label">
          Intensity
        </label>
        <div class="col-sm-10">
          <input type="text" id="intensity" name="intensity" placeholder="Intensity" class="form-control" value="<%= @exercise.intensity %>">
        </div>
      </div>

      <!-- Label and input for favsave -->
      <div class="form-group">
        <label for="favsave" class="col-sm-2 control-label">
          Favsave
        </label>
        <div class="col-sm-10">
          <input type="text" id="favsave" name="favsave" placeholder="Favsave" class="form-control" value="<%= @exercise.favsave %>">
        </div>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="col-sm-2 control-label">
          User
        </label>
        <div class="col-sm-10">
          <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @exercise.user_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Exercise" class="btn btn-warning">
          or
          <a href="/exercises/<%= @exercise.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

